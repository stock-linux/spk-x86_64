tar -xf $SRC/$name$version-src.tar.*
cd $name$version

SRCDIR=$(pwd)
cd unix

./configure --prefix=/usr           \
            --mandir=/usr/share/man

make

sed -e "s|$SRCDIR/unix|/usr/lib|" \
    -e "s|$SRCDIR|/usr/include|"  \
    -i tclConfig.sh

sed -e "s|$SRCDIR/unix/pkgs/tdbc1.1.5|/usr/lib/tdbc1.1.5|" \
    -e "s|$SRCDIR/pkgs/tdbc1.1.5/generic|/usr/include|"    \
    -e "s|$SRCDIR/pkgs/tdbc1.1.5/library|/usr/lib/tcl8.6|" \
    -e "s|$SRCDIR/pkgs/tdbc1.1.5|/usr/include|"            \
    -i pkgs/tdbc1.1.5/tdbcConfig.sh

sed -e "s|$SRCDIR/unix/pkgs/itcl4.2.3|/usr/lib/itcl4.2.3|" \
    -e "s|$SRCDIR/pkgs/itcl4.2.3/generic|/usr/include|"    \
    -e "s|$SRCDIR/pkgs/itcl4.2.3|/usr/include|"            \
    -i pkgs/itcl4.2.3/itclConfig.sh

unset SRCDIR

make DESTDIR=$PKG install

chmod -v u+w $PKG/usr/lib/libtcl8.6.so

make DESTDIR=$PKG install-private-headers

ln -sfv tclsh8.6 $PKG/usr/bin/tclsh

mv $PKG/usr/share/man/man3/{Thread,Tcl_Thread}.3

cd ..
tar -xf $SRC/$name$version-html.tar.gz --strip-components=1
mkdir -v -p $PKG/usr/share/doc/$name-$version
cp -v -r  ./html/* $PKG/usr/share/doc/$name-$version
